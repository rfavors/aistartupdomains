# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ai_startup_domains
DB_USER=postgres
DB_PASSWORD=password

# Server Configuration
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# JWT Secret (generate a secure random string)
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# OpenAI API (for domain generation)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your_openai_api_key_here

# Email Service (ConvertKit)
# Get your API key from: https://app.convertkit.com/account_settings/advanced_settings
CONVERTKIT_API_KEY=your_convertkit_api_key_here
CONVERTKIT_API_SECRET=your_convertkit_api_secret_here
CONVERTKIT_FORM_ID=your_convertkit_form_id_here

# Alternative: Beehiiv (uncomment if using Beehiiv instead)
# BEEHIIV_API_KEY=your_beehiiv_api_key_here
# BEEHIIV_PUBLICATION_ID=your_beehiiv_publication_id_here